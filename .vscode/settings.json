{
  "editor.codeActionsOnSave": {
    "source.organizeImports": false
  },
  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.cursorStyle": "line",
  "editor.fontLigatures": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": false,
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "editor.wordWrap": "off",
  "extensions.showRecommendationsOnlyOnDemand": true,
  "extensions.ignoreRecommendations": true,
  // Workbench
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 8,
  "workbench.editor.highlightModifiedTabs": true,
  // File settings
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/*.js.map": {
      "when": "$(basename)"
    }
  },
  "files.associations": {
    "Makefile*": "makefile"
  },
  // "files.hotExit": "onExit",
  "files.defaultLanguage": "go",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  // Peacock Settings
  "peacock.color": "#536a4e",
  // GoLang
  "go.lintOnSave": "file",
  "go.vetOnSave": "package",
  "go.useCodeSnippetsOnFunctionSuggest": false,
  "go.testFlags": [
    "-v",
    "-count=1"
  ],
  "go.useLanguageServer": true,
  "go.lintTool": "golangci-lint",
  "go.testTimeout": "10s",
  "go.formatTool": "goimports",
  "cSpell.allowCompoundWords": true,
  // Proto
  "clang-format.style": "google",
  "protoc": {
    "options": [
      "--proto_path=${workspaceRoot}",
      "--proto_path=${env.GOPATH}/src"
    ]
  },
  // REST client
  "rest-client.environmentVariables": {
    "$shared": {
      "client-id": "rest-client-api",
      "username": "demo",
      "password": "demo",
      "api-gateway-url": "http://localhost:8080"
    },
    "local": {
      "oidc-issuer-url": "https://localhost/auth/realms/ngx",
      "api-url": "http://localhost:3000"
    },
    "local-admin": {
      "oidc-issuer-url": "https://localhost/auth/realms/ngx",
      "api-url": "http://localhost:3000",
      "username": "ngxadmin",
      "password": "ngxadmin"
    },
    "production": {
      "oidc-issuer-url": "https://localhost/auth/realms/ngx",
      "api-url": "https://api.localhost"
    }
  },
  "fileheader.Author": "Edward",
  "fileheader.tpl": "/*\r\n * @Author: {author} https://github.com/crazybber\r\n * @Date: {createTime}\r\n * @Last Modified by: {lastModifiedBy}\r\n * @Last Modified time: {updateTime}\r\n * @Description:   \r\n */\r\n\r\n",
  "fileheader.LastModifiedBy": "Eamon",
}
